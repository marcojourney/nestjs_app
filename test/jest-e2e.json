{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "modulePaths": ["<rootDir>"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "src/$1",
    "<rootDir>/(.*)": "<rootDir>/$1",
    "^@helpers/(.*)$": "<rootDir>/../src/helpers/$1"
  },
  "moduleDirectories": ["<rootDir>/../", "node_modules"]
}
